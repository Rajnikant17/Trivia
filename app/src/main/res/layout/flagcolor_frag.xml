    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_marginTop="30dp"
        android:layout_marginHorizontal="10dp"
        app:cardCornerRadius="20dp"
        android:layout_height="match_parent"
        android:layout_marginBottom="80dp"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/firstfragmentquestion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginHorizontal="30dp"
                android:layout_marginTop="30dp"
                android:gravity="center"
                android:text="What are the colors in the Indian national flag ?"
                android:textColor="#000000"
                android:textSize="18sp" />

            <LinearLayout
                  android:layout_marginBottom="15dp"
                  android:layout_marginTop="35dp"
                  android:id="@+id/radiogroupquestions"
                  android:layout_below="@+id/firstfragmentquestion"
                  android:layout_width="wrap_content"
                  android:layout_marginLeft="10dp"
                  android:orientation="vertical"
                  android:layout_height="match_parent">
                  <CheckBox
                      android:layout_width="wrap_content"
                      android:text="White"
                      android:id="@+id/checkbox_white"
                      android:textSize="16sp"
                      android:layout_height="0dp"
                      android:layout_weight="1" />
                  <CheckBox
                      android:layout_marginTop="10dp"
                      android:layout_width="wrap_content"
                      android:text="Yellow"
                      android:id="@+id/checkbox_yellow"
                      android:textSize="16sp"
                      android:layout_height="0dp"
                      android:layout_weight="1"
                      />
                  <CheckBox
                      android:layout_marginTop="10dp"
                      android:layout_width="wrap_content"
                      android:text="Orange"
                      android:textSize="16sp"
                      android:id="@+id/checkbox_orange"
                      android:layout_height="0dp"
                      android:layout_weight="1" />
                  <CheckBox
                      android:layout_marginTop="10dp"
                      android:layout_width="wrap_content"
                      android:text="Green"
                      android:id="@+id/checkbox_green"
                      android:textSize="16sp"
                      android:layout_height="0dp"
                      android:layout_weight="1"

                      />

              </LinearLayout>

        </RelativeLayout>

    </androidx.cardview.widget.CardView>


</RelativeLayout>